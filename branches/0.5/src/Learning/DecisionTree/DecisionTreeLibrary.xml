<?xml version="1.0" encoding="UTF-8"?>

<library name="DecisionTree" directory="Learning/DecisionTree">

  <!-- ExtraTrees -->
  <class name="ExtraTreesFunction" base="Function" abstract="yes">
    <variable type="PositiveInteger" name="numTrees"/>
    <variable type="PositiveInteger" name="numAttributeSamplesPerSplit"/>
    <variable type="PositiveInteger" name="minimumSizeForSplitting"/>
  </class>

  <class name="ExtraTreeLearningMachine" base="ProxyFunction">
    <constructor arguments="size_t numTrees, size_t numAttributeSamplesPerSplit, size_t minimumSizeForSplitting, bool useLowMemory, const File&amp; file" returnType="Function"/>
    <variable type="PositiveInteger" name="numTrees"/>
    <variable type="PositiveInteger" name="numAttributeSamplesPerSplit"/>
    <variable type="PositiveInteger" name="minimumSizeForSplitting"/>
    <variable type="Boolean" name="useLowMemory"/>
    <variable type="File" name="file"/>
  </class>

  <!-- RTreeFunction -->
  <class name="RTreeFunction" base="ExtraTreesFunction" abstract="yes">
    <variable type="GenericVector[Double]" name="variableImportances"/>
  </class>

  <class name="ClassificationRTreeFunction" base="RTreeFunction"/>
  <class name="RegressionRTreeFunction" base="RTreeFunction"/>
  <class name="BinaryRTreeFunction" base="RTreeFunction"/>

  <class name="RTreeBatchLearner" base="BatchLearner">
    <constructor arguments="bool verbose"/>
    <variable type="Boolean" name="verbose"/>
  </class>

  <!-- LowMemoryRTreeFunction -->
  <class name="LowMemoryRTreeFunction" base="ExtraTreesFunction" abstract="yes"/>

  <class name="RegressionLowMemoryRTreeFunction" base="LowMemoryRTreeFunction"/>
  <class name="BinaryLowMemoryRTreeFunction" base="LowMemoryRTreeFunction"/>
  <class name="ClassificationLowMemoryRTreeFunction" base="LowMemoryRTreeFunction"/>

  <class name="LowMemoryRTreeBatchLearner" base="BatchLearner">
    <constructor/>
  </class>

  <!-- SavableRTreeFunction -->
  <class name="SavableRTreeFunction" base="ExtraTreesFunction" abstract="yes">
    <variable type="File" name="file"/>
  </class>

  <class name="RegressionSavableRTreeFunction" base="SavableRTreeFunction"/>
  <class name="BinarySavableRTreeFunction" base="SavableRTreeFunction"/>
  <class name="ClassificationSavableRTreeFunction" base="SavableRTreeFunction"/>

  <class name="SavableRTreeBatchLearner" base="BatchLearner">
    <constructor/>
  </class>

</library>
