<?xml version="1.0" encoding="UTF-8"?>

<library name="ProteinModel" directory="Model">

  <!-- Protein Model -->
  <class name="Model" base="CompositeFunction" abstract="yes"/>

  <class name="ProteinModel" base="Model" abstract="yes">
    <variable type="VariablesEnumeration[Protein]" name="target"/>
  </class>

  <class name="ProteinParallelModel" base="CompositeFunction">
    <variable type="ObjectVector[ProteinModel]" name="models"/>
  </class>

  <class name="ProteinSequentialModel" base="CompositeFunction">
    <variable type="ObjectVector[CompositeFunction]" name="models"/>
  </class>

  <!-- Protein Map -->
  <class name="Map" base="Object"/>

  <class name="ProteinMap" base="Map">
    <variable type="Protein" name="protein"/>
    <variable type="PositiveInteger" name="length"/>
  </class>

  <class name="CreateProteinMap" base="SimpleUnaryFunction"/>
  <class name="GetProteinMapElement" base="Function"/>
  <class name="GetSimpleProteinMapElement" base="GetProteinMapElement"/>




  <!-- Simple Model -->
  <class name="SimpleProteinModel" base="ProteinModel">
    <!-- Global Parameters -->
    <variable type="Boolean" name="useProteinLength"/>
    <variable type="Boolean" name="aaGlobalHistogram"/>
    <variable type="Boolean" name="pssmGlobalHistogram"/>
    <variable type="Boolean" name="useNumCysteines"/>
    <variable type="Boolean" name="useNumOfEachResidue"/>
    <variable type="Boolean" name="aaDimericProfile"/>

    <!-- Residue Parameters -->
    <variable type="Boolean" name="usePosition"/>
    <variable type="Boolean" name="useRelativePosition"/>
    <variable type="PositiveInteger" name="aaWindowSize"/>
    <variable type="PositiveInteger" name="pssmWindowSize"/>
    <variable type="PositiveInteger" name="aaLocalHistogramSize"/>
    <variable type="PositiveInteger" name="pssmLocalHistogramSize"/>
    <variable type="PositiveInteger" name="aaSeparationProfileSize"/>
    <variable type="PositiveInteger" name="aaLocalDimericProfileSize"/>
  </class>
  



  <!-- BEGIN Model Function -->

  <class name="NumOfEachResidueFunction" base="SimpleUnaryFunction"/>

  <class name="DimericAminoAcidCompositionFunction" base="Function"/>
  <class name="DimericCompositionFunction" base="Function"/>
  <class name="LocalDimericAminoAcidCompositionFunction" base="Function">
    <variable type="PositiveInteger" name="windowSize"/>
  </class>

  <class name="SeparationProfile" base="Object">
    <variable type="GenericVector[GenericVector[PositiveInteger]]" name="profiles"/>
  </class>
  <class name="CreateSeparationProfileFunction" base="SimpleUnaryFunction"/>
  <class name="GetSeparationProfileFunction" base="Function">
    <variable type="PositiveInteger" name="index"/>
    <variable type="PositiveInteger" name="windowSize"/>
  </class>
  
  <!-- END Model Function -->

</library>
