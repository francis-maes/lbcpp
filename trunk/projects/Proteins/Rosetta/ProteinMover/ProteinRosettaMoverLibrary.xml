<?xml version="1.0" encoding="UTF-8"?>

<library name="ProteinRosettaMover" directory="Rosetta/ProteinMover">

  <class name="PhiPsiMover" base="ProteinMover">  
    <variable type="PositiveInteger" name="residue" shortName="r" description="Index of the residue"/>
    <variable type="Double" name="deltaPhi" shorName="phi" description="Value of delta Phi"/>
    <variable type="Double" name="deltaPsi" shorName="psi" description="Value of delta Psi"/>
  </class>
  
  <class name="ShearMover" base="ProteinMover">
    <variable type="PositiveInteger" name="residue" shortName="r" description="Index of the residue"/>
    <variable type="Double" name="deltaPhi" shorName="phi" description="Value of delta Phi"/>
    <variable type="Double" name="deltaPsi" shorName="psi" description="Value of delta Psi"/>
  </class>
    
  <class name="RigidBodyMover" base="ProteinMover">
    <variable type="Pair[Integer, Integer]" name="residues" shortName="r" description="Index of residues"/>
    <variable type="Double" name="magnitude" shorName="m" description="Value of the magnitude of the translation"/>
    <variable type="Double" name="amplitude" shorName="a" description="Value of the amplitude of the rotation"/>
  </class>
    
</library>
