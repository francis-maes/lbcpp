<?xml version="1.0" encoding="UTF-8"?>

<library name="ProteinRosettaDataMover" directory="Rosetta/Data/Mover">
  <!-- abstract classes -->
  <class name="PoseMover" base="Object" abstract="yes" />
  
  <!-- enumeration -->
  <enumeration name="PoseMoverEnumeration">
    <value name="phipsi"/>
    <value name="shear"/>
    <value name="rigidbody"/>
  </enumeration>
  
  <!-- classes -->
  <class name="PhiPsiMover" base="PoseMover">
    <constructor arguments="size_t residue, double deltaPhi, double deltaPsi"/>
    <variable type="PositiveInteger" name="residue" shortName="r" description="Index of the residue"/>
    <variable type="Double" name="deltaPhi" shortName="phi" description="Value of delta Phi"/>
    <variable type="Double" name="deltaPsi" shortName="psi" description="Value of delta Psi"/>
  </class>
  
  <class name="ShearMover" base="PoseMover">
    <constructor arguments="size_t residue, double deltaPhi, double deltaPsi"/>
    <variable type="PositiveInteger" name="residue" shortName="r" description="Index of the residue"/>
    <variable type="Double" name="deltaPhi" shortName="phi" description="Value of delta Phi"/>
    <variable type="Double" name="deltaPsi" shortName="psi" description="Value of delta Psi"/>
  </class>
    
  <class name="RigidBodyMover" base="PoseMover">
    <constructor arguments="size_t residue1, size_t residue2, double magnitude, double amplitude"/>
    <variable type="Pair[Integer, Integer]" name="residues" shortName="r" description="Index of residues"/>
    <variable type="Double" name="magnitude" shortName="m" description="Value of the magnitude of the translation"/>
    <variable type="Double" name="amplitude" shortName="a" description="Value of the amplitude of the rotation"/>
  </class>
    
</library>
