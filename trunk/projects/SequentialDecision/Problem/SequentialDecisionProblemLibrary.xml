<?xml version="1.0" encoding="UTF-8"?>

<library name="DecisionProblem" directory="Problem">

  <!-- Bandits -->
  <class name="DiscreteBanditState" base="DecisionProblemState">
    <variable type="ObjectVector[RandomGenerator]" name="randomGenerators"/>
    <variable type="ObjectVector[Sampler]" name="samplers"/>
    <variable type="GenericVector[PositiveInteger]" name="availableActions"/>
  </class>
  <class name="DiscreteBanditDecisionProblem" base="DecisionProblem" abstract="yes">
    <variable type="PositiveInteger" name="numBandits"/>
  </class>

  <class name="DiscreteBanditInitialStateSampler" base="CompositeSampler">
    <variable type="PositiveInteger" name="numBandits"/>
  </class>

  <!--
  <class name="BernouilliDiscreteBanditState" base="DiscreteBanditState">
    <variable type="DenseDoubleVector[PositiveIntegerEnumeration,Double]" name="probabilities"/>
  </class>
  <class name="BernouilliBanditsInitialStateSampler" base="Function">
    <variable type="PositiveInteger" name="numBandits"/>
  </class>
  <class name="BernouilliDiscreteBanditDecisionProblem" base="DiscreteBanditDecisionProblem"/>
  -->

  <!-- LinearPointPhysic System -->
  <class name="LinearPointPhysicState" base="DecisionProblemState">
    <variable type="Double" name="position"/>
    <variable type="Double" name="velocity"/>
  </class>
  <class name="LinearPointPhysicStateSampler" base="Function"/>
  <class name="LinearPointPhysicProblem" base="DecisionProblem" shortName="lpp">
    <constructor arguments="double discount"/>
  </class>
  
  <!-- Damien's code wrapper -->
  <class name="DamienState" base="DecisionProblemState" abstract="yes"/>
  <class name="HIVDecisionProblemState" base="DamienState">
    <variable type="Double" name="T1"/>
    <variable type="Double" name="T2"/>
    <variable type="Double" name="T1star" shortName="T1*"/>
    <variable type="Double" name="T2star" shortName="T2*"/>
    <variable type="Double" name="V"/>
    <variable type="Double" name="E"/>
  </class>
  <class name="HIVInitialStateSampler" base="Function"/>

  <class name="HIVDecisionProblem" base="DecisionProblem" shortName="hiv">
    <constructor arguments="double discount"/>
  </class>
  
</library>
