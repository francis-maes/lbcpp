<?xml version="1.0" encoding="UTF-8"?>

<library name="OptimizerContext" directory="Optimizer/Context">

  <class name="SynchroneousOptimizerContext" base="OptimizerContext">
    <constructor arguments="ExecutionContext&amp; context, const FunctionPtr&amp; objectiveFunction, const FunctionPtr&amp; validationFunction"/>
  </class>
  
  <class name="MultiThreadedOptimizerContext" base="OptimizerContext">
    <constructor arguments="ExecutionContext&amp; context, const FunctionPtr&amp; objectiveFunction, const FunctionPtr&amp; validationFunction, size_t timeToSleep"/>
    <variable type="Integer" name="numEvaluationInProgress"/>
  </class>
  
  <class name="DistributedOptimizerContext" base="OptimizerContext">
    <constructor arguments="ExecutionContext&amp; context, const FunctionPtr&amp; objectiveFunction"/>
    <variable type="GenericVector[Variable]" name="results"/>
    <variable type="PositiveInteger" name="numFinishedEvaluations"/>
  </class>
  
</library>
