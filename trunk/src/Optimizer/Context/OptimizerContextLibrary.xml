<?xml version="1.0" encoding="UTF-8"?>

<library name="OptimizerContext" directory="Optimizer/Context">

  <import name="OptimizerContextNetwork" ifdef="LBCPP_NETWORKING"/>

  <class name="SynchroneousOptimizerContext" base="OptimizerContext">
    <constructor arguments="const FunctionPtr&amp; objectiveFunction"/>
  </class>
  
  <class name="MultiThreadsOptimizerContext" base="OptimizerContext">
    <constructor arguments="const FunctionPtr&amp; objectiveFunction, size_t nbThreads"/>
    <variable type="PositiveInteger" name="nbThreads"/>
    <variable type="ExecutionContext" name="MTContext"/>
  </class>
  
</library>
