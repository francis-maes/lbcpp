<?xml version="1.0" encoding="UTF-8"?>

<file name="InferenceContext" directory="Inference/InferenceContext">

  <namespace name="lbcpp">

    <class name="Job" base="NameableObject" abstract="yes"/>
    
    <class name="ThreadPool"/>
    <class name="InferenceStack"/>

    <class name="InferenceContext" abstract="yes"/>

    <class name="SingleThreadedInferenceContext" base="InferenceContext">
      <constructor/>
      <variable type="InferenceStack" name="stack"/>
    </class>

    <class name="JobThreadInferenceContext" base="InferenceContext">
      <constructor arguments="InferenceContextPtr parentContext, Thread* thread, ThreadPoolPtr pool, InferenceStackPtr stack"/>
      <variable type="InferenceContext" name="parentContext"/>
      <variable type="ThreadPool" name="pool"/>
      <variable type="InferenceStack" name="stack"/>
    </class>
    
    <class name="MultiThreadedInferenceContext" base="InferenceContext">
      <constructor arguments="ThreadPoolPtr pool"/>
      <variable type="ThreadPool" name="pool"/>
    </class>

  </namespace>
  
</file>
