<?xml version="1.0" encoding="UTF-8"?>

<library name="BatchLearner" directory="Learning/BatchLearner">

  <class name="BatchLearner" base="Function" abstract="yes"/>
  
  <class name="BatchLearnerDecorator" base="BatchLearner" abstract="yes">
    <variable type="BatchLeaner" name="decorated"/>
  </class>

  <class name="ProxyFunctionBatchLearner" base="BatchLearner">
    <constructor/>
  </class>
  
  <class name="FrameBasedFunctionBatchLearner" base="BatchLearner">
    <constructor/>
  </class>

  <class name="StochasticBatchLearner" base="BatchLearner">
    <constructor arguments="const std::vector&lt;FunctionPtr&gt;&amp; functionsToLearn, size_t maxIterations, bool randomizeExamples"/>
    <constructor arguments="size_t maxIterations, bool randomizeExamples"/>
    <variable type="PositiveInteger" name="maxIterations"/>
    <variable type="Boolean" name="randomizeExamples"/>
  </class>
  
  <class name="SupervisedExamplesBatchLearner" base="BatchLearnerDecorator">
    <constructor arguments="BatchLearnerPtr decorated"/>
  </class>
  
</library>
