<?xml version="1.0" encoding="UTF-8"?>

<library name="BatchLearner" directory="Learning/BatchLearner">

  <class name="BatchLearner" base="Function" abstract="yes"/>
  
  <class name="DecoratorBatchLearner" base="BatchLearner" abstract="yes">
    <variable type="BatchLearner" name="decorated"/>
  </class>

  <class name="ProxyFunctionBatchLearner" base="BatchLearner">
    <constructor/>
  </class>
  
  <class name="CompositeFunctionBatchLearner" base="BatchLearner">
    <constructor/>
  </class>

  <class name="StochasticBatchLearner" base="BatchLearner">
    <constructor arguments="size_t maxIterations, bool randomizeExamples, size_t numExamplesPerIteration"/>
    <variable type="PositiveInteger" name="maxIterations"/>
    <variable type="Boolean" name="randomizeExamples"/>
    <variable type="PositiveInteger" name="numExamplesPerIteration"/>
  </class>

  <class name="FilterUnsupervisedExamplesBatchLearner" base="DecoratorBatchLearner">
    <constructor arguments="BatchLearnerPtr decorated"/>
  </class>

  <class name="UnaryHigherOrderFunctionBatchLearner" base="BatchLearner">
    <constructor/>
  </class>

  <class name="ComposeBatchLearner" base="BatchLearner">
    <constructor/>
  </class>

  <!-- Double Vector Function -->
  <class name="DoubleVectorNormalizeBatchLearner" base="BatchLearner">
    <constructor arguments="bool computeVariances, bool computeMeans" returnType="BatchLearner"/>
    <variable type="Boolean" name="computeVariances"/>
    <variable type="Boolean" name="computeMeans"/>
  </class>

</library>
