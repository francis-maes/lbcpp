<?xml version="1.0" encoding="UTF-8"?>

<library name="DecisionTree" directory="Learning/DecisionTree">

  <!-- RTreeFunction -->
  <class name="RTreeFunction" base="LearnableFunction" abstract="yes">
    <variable type="PositiveInteger" name="numTrees"/>
    <variable type="PositiveInteger" name="numAttributeSamplesPerSplit"/>
    <variable type="PositiveInteger" name="minimumSizeForSplitting"/>
  </class>
  
  <class name="ClassificationRTreeFunction" base="RTreeFunction"/>
  <class name="RegressionRTreeFunction" base="RTreeFunction"/>
  <class name="BinaryRTreeFunction" base="RTreeFunction"/>
  
  <class name="RTreeBatchLearner" base="BatchLearner">
    <constructor/>
  </class>
  
  <!-- BinaryDecisionTree -->
  <class name="BinaryDecisionTreeFunction" base="LearnableFunction" abstract="yes"/>

  <class name="RegressionBinaryDecisionTreeFunction" base="BinaryDecisionTreeFunction"/>
  <class name="BinaryClassificationBinaryDecisionTreeFunction" base="BinaryDecisionTreeFunction"/>
  <class name="ClassificationBinaryDecisionTreeFunction" base="BinaryDecisionTreeFunction"/>
  
  <class name="BinaryDecisionTreeBatchLearner" base="BatchLearner">
    <variable type="Integer" name="numAttributeSamplesPerSplit"/>
    <variable type="Integer" name="minimumSizeForSplitting"/>
  </class>

  <import name="DecisionTreeData"/>
  
</library>
