<?xml version="1.0" encoding="UTF-8"?>

<library name="NetworkNode" directory="Network/Node">

  <include file="Network/Node/GridNode/GridNodeNetworkInterface.h"/>
  <include file="Network/Node/GridNode/GridNodeNetworkNotification.h"/>
  <include file="Network/Node/ManagerNode/ManagerNodeNetworkInterface.h"/>
  <include file="Network/Node/ManagerNode/ManagerNodeNetworkNotification.h"/>

  <!-- NetworkRequest -->
  <class name="NetworkRequest" base="Object">
    <variable type="String" name="identifier"/>
    <variable type="String" name="projectName"/>
    <variable type="String" name="source"/>
    <variable type="String" name="destination"/>
    <variable type="XmlElement" name="workUnit"/>
    <variable type="Integer" name="requiredCpus"/>
    <variable type="Integer" name="requiredMemory"/>
    <variable type="Integer" name="requiredTime"/>
  </class>

  <class name="NetworkResponse" base="Object">
    <variable type="String" name="identifier"/>
    <variable type="XmlElement" name="trace"/>
  </class>

  <class name="NetworkArchive" base="Object">
    <variable type="NetworkRequest" name="request"/>
    <variable type="NetworkResponse" name="response"/>
  </class>

  <!-- NetworkInterface -->
  <class name="NodeNetworkInterface" base="NetworkInterface" abstract="yes">
    <variable type="String" name="nodeName"/>
  </class>

  <class name="GridNodeNetworkInterface" base="NodeNetworkInterface" abstract="yes"/>
  <class name="ClientGridNodeNetworkInterface" base="GridNodeNetworkInterface"/>
  <class name="SgeGridNodeNetworkInterface" base="GridNodeNetworkInterface"/>
  <class name="BoincGridNodeNetworkInterface" base="GridNodeNetworkInterface"/>

  <class name="ManagerNodeNetworkInterface" base="NodeNetworkInterface" abstract="yes"/>
  <class name="FileSystemManagerNodeNetworkInterface" base="ManagerNodeNetworkInterface"/>
  <class name="ClientManagerNodeNetworkInterface" base="ManagerNodeNetworkInterface"/>

  <!-- NetworkNotification -->
  <class name="NodeNetworkNotification" base="NetworkNotification" abstract="yes"/>
  <class name="CloseCommunicationNotification" base="NetworkNotification"/>


  <class name="GridNodeNetworkNotification" base="NodeNetworkNotification" abstract="yes"/>
  <class name="PushWorkUnitsNotification" base="GridNodeNetworkNotification">
    <variable type="Container[NetworkRequest]" name="networkRequests"/>
  </class>
  <class name="GetFinishedExecutionTraces" base="GridNodeNetworkNotification"/>


  <class name="ManagerNodeNetworkNotification" base="NodeNetworkNotification" abstract="yes"/>
  <class name="PushWorkUnitNotification" base="ManagerNodeNetworkNotification">
    <variable type="NetworkRequest" name="request"/>
  </class>
  <class name="IsWorkUnitFinishedNotification" base="ManagerNodeNetworkNotification">
    <variable type="String" name="identifier"/>
  </class>
  <class name="GetExecutionTraceNotification" base="ManagerNodeNetworkNotification">
    <variable type="String" name="identifier"/>
  </class>

</library>
