<?xml version="1.0" encoding="UTF-8"?>

<file name="ExecutionCallback" directory="Execution/Callback">

  <namespace name="lbcpp">
    <class name="SilentExecutionCallback" base="ExecutionCallback">
      <constructor/>
    </class>
    <class name="ConsoleExecutionCallback" base="ExecutionCallback">
      <constructor/>
    </class>

    <class name="UserInterfaceExecutionCallback" base="ExecutionCallback">
      <constructor/>
    </class>
    
    <!-- NotifierExecutionCallback -->
    <class name="ExecutionNotification" base="Notification">
      <variable type="ExecutionCallback" name="target"/>
    </class>

    <class name="ExecutionProgressNotification" base="ExecutionNotification">
      <variable type="Double" name="progression"/>
      <variable type="Double" name="progressionTotal"/>
      <variable type="String" name="progressionUnit"/>
    </class>

    <class name="ExecutionResultNotification" base="ExecutionNotification">
      <variable type="String" name="name"/>
      <variable type="Variable" name="value"/>
    </class>

    <class name="ExecutionWorkUnitNotification" base="ExecutionNotification">
      <variable type="ExecutionCallback" name="target"/>
      <variable type="WorkUnit" name="workUnit"/>
      <variable type="Boolean" name="isPostExecution"/>
      <variable type="Boolean" name="executionResult"/>
    </class>

    <enumeration name="ExecutionMessageType">
      <value name="informationMessageType"/>
      <value name="warningMessageType"/>
      <value name="errorMessageType"/>
      <value name="statusMessageType"/>
    </enumeration>

    <class name="ExecutionMessageNotification" base="ExecutionNotification">
      <variable type="ExecutionMessageType" name="messageType" enumeration="yes"/>
      <variable type="String" name="what"/>
      <variable type="String" name="where"/>
    </class>

    <class name="NotifierExecutionCallback" base="ExecutionCallback">
      <constructor arguments="ExecutionContext&amp; context, ConsumerPtr notificationsConsumer, ExecutionCallbackPtr target"/>
      <variable type="Consumer" name="notificationsConsumer"/>
      <variable type="ExecutionCallback" name="target"/>
    </class>
   
  </namespace>

</file>
