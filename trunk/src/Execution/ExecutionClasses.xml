<?xml version="1.0" encoding="UTF-8"?>

<file name="Execution" directory="lbcpp/Execution">

  <include file="lbcpp/Execution/ExecutionContext.h"/>
  <include file="lbcpp/Execution/Program.h"/>
  <include file="lbcpp/Execution/Job.h"/>
  <include file="lbcpp/Execution/ThreadPool.h"/>
  <import name="ExecutionCallback"/>

  <namespace name="lbcpp">

    <!-- Work Unit -->
    <class name="WorkUnit" base="NameableObject" abstract="yes"/>
    
    <!-- Execution Context -->
    <class name="ExecutionCallback" base="Object" abstract="yes"/>
    <class name="ExecutionContext" base="ExecutionCallback" abstract="yes">
      <variable type="ObjectVector[ExecutionCallback]" name="callbacks"/>
    </class>
    
    <!-- Program -->
    <class name="Program" base="Object"/>

    <!-- Job and ThreadPool -->
    <class name="Job" base="NameableObject" abstract="yes"/>

    <class name="ThreadPool">
      <variable type="Integer" name="numCpus"/>
      <variable type="Boolean" name="verbose"/>
      <variable type="AverageValuesCache" name="timingsCache"/>
    </class>

  </namespace>

</file>
